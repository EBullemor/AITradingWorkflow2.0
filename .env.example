# AI Trading Workflow Configuration

# Trading Mode: 'paper' for paper trading, 'live' for real trading
TRADING_MODE=paper

# Market Data API
MARKET_DATA_API_KEY=your_api_key_here
MARKET_DATA_PROVIDER=alpaca  # alpaca, polygon, yahoo, etc.

# Broker Configuration
BROKER_API_KEY=your_broker_api_key
BROKER_API_SECRET=your_broker_api_secret
BROKER_BASE_URL=https://paper-api.alpaca.markets  # Use paper trading URL

# Database
DATABASE_URL=sqlite:///data/trading.db

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/trading.log

# Model Configuration
MODEL_PATH=models/
PREDICTION_THRESHOLD=0.6

# Risk Management
MAX_POSITION_SIZE=0.1  # 10% of portfolio per position
MAX_DAILY_LOSS=0.02    # 2% max daily loss
STOP_LOSS_PCT=0.05     # 5% stop loss per trade
